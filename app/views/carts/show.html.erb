<div class="row">
  <div class="col-md-12">
    <%= link_to("Empty Cart", clean_carts_path, method: :delete, class: "pull-right", style: "text_decoration: underline;", data: {confirm: "Are you sure to empty the cart?"}) %>
    <h2>Shopping Cart</h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product Info</th>
          <th>Price</th>
          <th>Quantity</th>
        </tr>
        <tbody>
          <% current_cart.cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= link_to product_path(cart_item.product) do %>
                  <% if cart_item.product.image.present? %>
                    <%= image_tag(cart_item.product.image.thumb.url, class: "thumbnail") %>
                  <% else %>
                    <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                  <% end %>
                <% end %>
              </td>
              <td><%= link_to(cart_item.product.title, product_path(cart_item.product)) %></td>
              <td><%= cart_item.product.price %></td>
              <td><%= cart_item.quantity %>
                <br>
                <%= link_to("Delete", product_path(cart_item.product), method: :delete) %>
              </td>
            </tr>
          <% end %></tbody>
      </thead>
    </table>
    <br>
    <div class="total clearfix">
      <span class="pull-right">
        <span>Total <%= render_cart_total_price(current_cart) %> USD</span>
      </span>
    </div>
    <hr>
    <div class="checkout clearfix">
      <%= link_to("Checkout", "#", method: :post, class: "btn btn-lg btn-danger pull-right") %>
    </div>
  </div>
</div>

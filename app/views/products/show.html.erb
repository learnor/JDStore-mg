<div class="row">
  <div class="container">
    <div class="col-md-9">
      <% if @product.image.present? %>
        <%= image_tag(@product.image.medium.url, class: "thumbnail") %>
      <% else %>
        <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
      <% end %>
    </div>
    <div class="col-md-3">
      <h2><%= @product.title %></h2>
      <div style="height:100px;">
        <p><%= @product.description %></p>
      </div>
      <div class="product-price"> $ <%= @product.price %>
      </div>
      <div class="pull-right">
        <% if @product.quantity.present? && @product.quantity > 0 %>
          <%= link_to("买票上船", add_to_cart_product_path(@product), method: :post, class: "btn btn-primary btn-lg btn-danger") %>
        <% else %>
          Sold out!
            <br>
          <%= link_to("Add to Cart", "#", class: "btn btn-primary btn-lg btn-danger disabled" ) %>
        <% end %>
      </div>
    </div>
  </div>
</div>

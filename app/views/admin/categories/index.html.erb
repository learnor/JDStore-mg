
<%= link_to("New Category", new_admin_category_path) %>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>目录名</th>
            <th>目录描述</th>
            <th>编辑目录</th>
        </tr>
    </thead>
     <tbody>
         <% @categories.each do |category| %>
            <tr>
                <td><%= category.id %></td>
                <td><%= category.name %></td>
                <td><%= category.description %></td>
                <td><%= link_to("Edit",edit_admin_category_path(category)) %>
                <br><%= link_to("Delete", admin_category_path(category),method: :delete)  %></td>
            </tr>
         <% end %>
     </tbody>
</table>
